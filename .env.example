# ============================================================
# CRM Dashboard — Variables d'environnement
# Copier ce fichier en .env.local et remplir les valeurs
# Ne jamais committer .env.local sur GitHub
# ============================================================

# --- Application ---
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="CRM Dashboard"

# --- Probabilités par étape du pipeline (0 à 1) ---
# Modifiables ici en attendant la personnalisation UI (V2)
NEXT_PUBLIC_PROB_LEAD=0.10
NEXT_PUBLIC_PROB_QUALIFICATION=0.20
NEXT_PUBLIC_PROB_DISCOVERY=0.40
NEXT_PUBLIC_PROB_PROPOSAL_SENT=0.60
NEXT_PUBLIC_PROB_NEGOTIATION=0.80
NEXT_PUBLIC_PROB_CLOSED_WON=1.00
NEXT_PUBLIC_PROB_CLOSED_LOST=0.00

# --- Seuils d'alertes ---
# Nombre de jours sans activité avant qu'un deal soit considéré "froid"
NEXT_PUBLIC_COLD_DEAL_DAYS=14
# Nombre d'heures avant qu'un lead entrant soit considéré "non traité"
NEXT_PUBLIC_UNHANDLED_LEAD_HOURS=48

# --- Forecast ---
# Horizons de prévision en jours
NEXT_PUBLIC_FORECAST_SHORT=30
NEXT_PUBLIC_FORECAST_MID=60
NEXT_PUBLIC_FORECAST_LONG=90

# --- Feature flags (true / false) ---
# Activer la persistance locale entre sessions (V1)
NEXT_PUBLIC_ENABLE_PERSISTENCE=false
# Activer les scénarios forecast Best/Most likely/Worst (V1)
NEXT_PUBLIC_ENABLE_FORECAST_SCENARIOS=false
# Activer l'export PDF/CSV (V2)
NEXT_PUBLIC_ENABLE_EXPORT=false
